{
  "name": "storyteller",
  "productName": "StoryTeller",
  "version": "1.1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.storyteller.app",
    "productName": "StoryTeller",
